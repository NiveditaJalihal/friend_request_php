<script>
    function verify(v) {

        if (v.checked == true) {
            document.getElementById("text").disabled = true;
        } else {
            document.getElementById("text").disabled = false;
        }



    }

    function validate() {

        var check = document.getElementById("select").value;
        if (check == "default") {
            document.getElementById("errselect").innerText = " please select type of leave";
            document.getElementById("errselect").style.color = " red";
            return false;
        }
        var date1 = document.getElementById("date1");
        var date2 = document.getElementById("date2");
        var time11 = document.getElementById("time1");
        var time22 = document.getElementById("time2");
        var time1 = time11.value;
        var time2 = time22.value;
        var day = document.getElementById("text").value;
     


        var firstDate = date1.value;

        var secondDate = date2.value;

        if (secondDate < firstDate) {
            document.getElementById("dateerror").innerText = " please select valid date";
            return false;
        }

        var date11 = new Date(firstDate);
        var date22 = new Date(secondDate);
        var timeDiff = Math.abs(date22.getTime() - date11.getTime());
        var diffDays = Math.ceil(timeDiff / (1000 * 3600 * 24));



        if (check = "Earned leave") {
            if (diffDays > leave[0]) {
                document.getElementById("dateerror").innerText = "not available,available days"+diffDays;
                return false;
            }

        }
        else if (check = "Paid leave") {
            if (diffDays > leave[1]) {
                document.getElementById("dateerror").innerText = "not available";
                return false;
            }

        }
        else if (check = "Marriage leave") {
            if (diffDays > leave[2]) {
                document.getElementById("dateerror").innerText = "not available";
                return false;
            }
        }

        else if (check = "Maternity leave") {
            if (diffDays > leave[3]) {
                document.getElementById("dateerror").innerText = "not available";
                return false;
            }
        }

        if (time1 == "" || time2 == "") {
            document.getElementById("timeerror").innerText = "please fill time details";
            return false;
        }
        alert("checking")

        if (day != "f" || day != "s") {
          
        
            alert(day);
        document.getElementById("dayss").innerHTML = "please eneter valid input";
        return false;
    }
        

    }
    function lastcheck() {
        var app = document.getElementById("approver").value;
        if (app = "") {
            document.getElementById("approveerror").innerHTML = "please provide approver name";
            return false;
        }
        else {
            return true;
        }

}
</script>
















