    <script>
function show() {
    document.getElementById("myModal").style.display = "block"
}
function gayab() {
    document.getElementById("myModal").style.display="none"
 }
window.onclick = function(event) {
    if (event.target == document.getElementById("myModal")) {
        document.getElementById("myModal").style.display = "none"
    }
}

function changea() {

    //document.getElementById('main').innerHTML = document.getElementById(vara).innerHTML;
    document.getElementById("electronics").style.display = "block"
    document.getElementById("appliances").style.display = "none"
    
}
function changeb() {

    //document.getElementById('main').innerHTML = document.getElementById(vara).innerHTML;
    document.getElementById("appliances").style.display = "block"
    document.getElementById("electronics").style.display = "none"

}

    </script>
