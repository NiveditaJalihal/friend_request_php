    <script>
        function product() {

            document.getElementById("pro_nameerror").innerText="";
            document.getElementById("pro_iderror").innerText="";
            document.getElementById("pro_priceerror").innerText="";
            document.getElementById("pro_caterror").innerText="";
            document.getElementById("pro_subcaterror").innerText="";




            var pro_name = document.getElementById("pro_name").value;
            var pro_id = document.getElementById("pro_id").value;
            var pro_price = document.getElementById("pro_price").value;
            var pro_cat = document.getElementById("pro_cat").value;
            var pro_subcat = document.getElementById("pro_subcat").value;

            if (pro_name =="") {
                document.getElementById("pro_nameerror").innerText = "please enter product name";
                document.getElementById("pro_nameerror").style.color = "red";
                return false;
            }
            if (pro_id =="") {
                document.getElementById("pro_iderror").innerText = "please enter product ID";
                document.getElementById("pro_iderror").style.color = "red";
                return false;
            }
            if (pro_price =="") {
                document.getElementById("pro_priceerror").innerText = "please enter product price";
                document.getElementById("pro_priceerror").style.color = "red";
                return false;
            }

            if (pro_cat =="") {
                document.getElementById("pro_caterror").innerText = "please enter product category";
                document.getElementById("pro_caterror").style.color = "red";
                return false;
            }

            if (pro_subcat =="") {
                document.getElementById("pro_subcaterror").innerText = "please enter product name";
                document.getElementById("pro_subcaterror").style.color = "red";
                return false;
            }

        }



    </script>





